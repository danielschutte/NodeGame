<div class="newPlayerContainer">
    <h1 class="newPlayerTitle">{{title}}</h1>



    <table class="playerOptionsTable">
        <tr>
            <td>Name:</td>
            <td><input type="text" class="newPlayerNameInput"></td>
        </tr>
        <tr>
            <td>Color:</td>
            <td>
                <div id="dropDown" class="dropDownContainer">
                    <div class="colorDropDown" onclick="dropDown(this)">
                        <div class="line1"></div>
                        <div class="line2"></div>
                        <li class="colorList">
                            <ul>color 1</ul>
                            <ul>color 2</ul>
                            <ul>color 3</ul>
                        </li>
                    </div>
                </div>

            </td>
        </tr>
    </table>





</div>