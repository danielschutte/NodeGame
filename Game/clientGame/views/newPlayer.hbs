    <h1 class="newPlayerTitle">{{title}}</h1>



    <table class="playerOptionsTable">
        <tr>
            <td>Name:</td>
            <td><input type="text" class="newPlayerNameInput"></td>
        </tr>
        <tr>
            <td>Color:</td>
            <td>
                <div id="dropDown" class="dropDownContainer">
